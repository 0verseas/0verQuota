<div class="header clearfix">
  <h3 class="text-muted text-center float-lg-left"><%= headline %></h3>

  <nav>
    <ul class="nav nav-pills nav-fill float-lg-right">
      <% for (item of nav) { %>
        <li class="nav-item">
          <a class="nav-link <%- system == item.system ? 'active' : '' %>" href="<%= item.link %><%= item.link.split(":")[0] == 'http' || item.link.split(":")[0] == 'https' ? '' : '.html' %>">
            <%= item.title %> <span class="sr-only">(current)</span>
          </a>
        </li>
      <% } %>
    </ul>
  </nav>
</div>

